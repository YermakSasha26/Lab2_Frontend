* 
  margin 0
  padding 0
  box-sizing border-box

body 
  font-family Arial, sans-serif

.container 
  width 100%
  margin 0 auto

header 
  text-align center
  padding 30px 0
  border-bottom 2px solid #ccc

.logo 
  font-size 28px
  font-weight bold

  img 
    max-width 120px
    height auto

.main-content 
  overflow hidden

.left-column 
  width 70%
  float left
  border-right 2px solid #ccc
  padding-top 30px
  padding-left 30px

.right-column 
  width 25%
  float right
  padding-top 30px
  padding-right 30px

.article 
  margin-bottom 30px
  display flex
  justify-content center

.image 
  width 100%
  height 220px
  margin-bottom 15px
  overflow hidden
  display flex

  img 
    width 100%
    height 100%
    object-fit cover

.image.split 
  display flex
  height 260px

  img 
    width 50%

.image.large 
  height 260px

.text 
  width 100%
  padding 15px
  margin-left 25px

h2 
  font-size 22px
  margin-bottom 10px

p 
  font-size 15px
  line-height 1.6

.right-column h2 
  margin-top 30px

// Media Queries
@media (max-width: 780px)
  .container 
    padding 15px

  header 
    padding 15px 0
    text-align center

  .logo img 
    max-width 80px

  .main-content 
    display flex
    flex-direction column
    padding 15px

  .left-column,
  .right-column 
    width 100%
    float none
    padding 0
    border none

  .left-column 
    margin-bottom 30px

  .article 
    flex-direction column
    margin-bottom 30px

  .text 
    margin-left 0
    padding 15px 0

  .image 
    height auto

  .image.large 
    height auto

  .image.split 
    flex-direction column

    img 
      width 100%
      height auto

  .right-column h2 
    margin-top 15px
    font-size 18px

  .right-column p 
    font-size 14px
    line-height 1.6

  h2 
    font-size 18px
    margin-bottom 15px

  p 
    font-size 14px
    line-height 1.4

@media (min-width: 1921px)
  .container 
    padding 25px

  header 
    padding 50px 0

  .logo img 
    max-width 150px

  .main-content 
    display flex
    padding 25px

  .left-column 
    width 65%
    padding 40px

  .right-column 
    width 30%
    padding 40px

  .article 
    margin-bottom 40px

  .image.large 
    height 320px

  .image.split 
    height 320px

  h2 
    font-size 28px
    margin-bottom 15px

  p 
    font-size 18px
    line-height 1.8

  .right-column h2 
    margin-top 40px
    font-size 24px

  .footer 
    padding 50px 0
    font-size 18px
